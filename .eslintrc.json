{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "webextensions": true,
    "worker": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "no-undef": "error",
    "@typescript-eslint/no-unused-vars": ["error", { "varsIgnorePattern": "^_" }]
  },
  "globals": {
    "globalThis": "readonly",
    "require": "readonly",
    "module": "readonly",
    "__filename": "readonly",
    "__dirname": "readonly"
  }
}
